# Database
DATABASE_URL="postgresql://user:password@localhost:5432/legacyvideo"

# Redis (use REDIS_URL or REDIS_HOST + REDIS_PORT)
REDIS_URL="redis://localhost:6379"
# REDIS_HOST="localhost"
# REDIS_PORT="6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
