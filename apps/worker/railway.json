{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm --filter @legacyvideo/db build && pnpm --filter @legacyvideo/worker build"
  },
  "deploy": {
    "startCommand": "pnpm --filter @legacyvideo/worker start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
